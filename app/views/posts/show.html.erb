<div class="max-h-auto bg-gray-100 max-[950px]:">
  <div class="grid grid-cols-2 grid-rows-2 gap-3">

    <div class=" rounded-lg shadow-lg p-5">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-100 text-green-700 font-medium rounded-lg mb-4"><%= notice %></p>
      <% end %>
      <%= render @post %>
      <div class="flex justify-between p-4 ">
        <% if @post.user.id == current_user.id || current_user.is_an_admin? %>
          <%= link_to edit_post_path(@post), class: "flex items-center text-blue-500 hover:text-blue-700" do %>
            <i class="fa-regular fa-pen-to-square text-blue-500 mr-1"></i>
            <span class="text-sm font-medium">Edit post</span>
          <% end %>
          <%= button_to post_path(@post), method: :delete, class: "flex items-center text-red-500 hover:text-red-700 ml-4" do %>
            <i class="fa-regular fa-trash-can text-red-500 mr-1"></i>
            <span class="text-sm font-medium">Destroy post</span>
          <% end %>
        <% end %>
        <%= link_to posts_path, class: "flex items-center text-gray-700 hover:text-gray-900" do %>
          <i class="fa-solid fa-chevron-left text-gray-700 mr-1"></i>
          <span class="text-sm font-medium">Back posts</span>
        <% end %>
      </div>
    </div>

    <div class="col-start-1 row-start-2 mt-2">
      <%= render "comments/new", post: @post %>
    </div>

    <div class="row-span-2 col-start-2 row-start-1 p-3 rounded-lg shadow-lg overflow-y-auto max-h-[930px]">
      <h1 class="font-bold text-4xl sticky top-0 bg-white p-10">Comments</h1>
      <%= render "posts/comments", post: @post, comments: @comments %>
    </div>

  </div>
</div>