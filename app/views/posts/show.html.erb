<div class="grid grid-cols-2 grid-rows-2 gap-4 w-full">
  <div class="">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

  <div class="flex row">
    <% if @post.user.id == current_user.id || current_user.is_an_admin? %>
      <%= link_to "Edit this post", edit_post_path(@post), class: "flex-grow-1 mt-2 rounded-lg py-3 px-5 bg-blue-900 text-white inline-block font-medium mr-2" %>
      <%= button_to "Destroy this post", post_path(@post), method: :delete, class: "flex-grow-1 mt-2 rounded-lg py-3 px-5 bg-red-900 text-white font-medium mr-2" %>
    <% end %>
    <%= link_to "Back to posts", posts_path, class: "flex-grow-1 mt-2 rounded-lg py-3 px-5 bg-blue-900 text-white inline-block font-medium" %>
  </div>

  </div>
  <div class="col-start-1 row-start-2">
    <%= render "comments/new", post: @post %>
  </div>

  <div class="row-span-2 col-start-2 row-start-1">
    <%= render "posts/comments", post: @post, comments: @comments %>
  </div>
</div>
