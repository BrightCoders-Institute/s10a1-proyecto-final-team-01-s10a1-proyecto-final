<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
  <div class="mx-auto md:w-2/3 w-full p-8 bg-white rounded-lg shadow-lg">
    <div class="flex justify-start mt-3 mb-8">
      <%= link_to posts_path, class: "flex items-center rounded-md text-white bg-gray-700 hover:bg-black" do %>
          <i class="fa-solid fa-chevron-left text-white p-1"></i>
          <span class="text-sm font-medium mr-2">Back posts</span>
        <% end %>
    </div>
    <h1 class="text-4xl font-bold text-gray-800 mb-6">New Post</h1>
    <%= render "form", post: @post %>
  </div>
</div>