<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="mx-auto md:w-2/3 w-full bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center">Editing post</h1>

    <%= render "form", post: @post %>

    <div class="flex justify-end mt-6">
      <%= link_to "Show this post", @post, class: "ml-2 rounded-lg py-3 px-5 bg-sky-700 hover:bg-cyan-600 text-white font-medium transition duration-300" %>
      <%= link_to "Back to posts", posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium transition duration-300" %>
    </div>
  </div>
</div>