<%= content_tag :div, id: (dom_id comment), class: "mb-5 bg-white rounded-lg shadow-lg p-4" do %>
  <p class="flex my-3">
    <strong class="block font-medium mb-1">User: </strong>
    <span class="text-gray-900"><%= comment.user.name %></span>
  </p>

  <p class="flex my-3">
    <strong class="block font-medium mb-1">Title: </strong>
    <span><%= comment.title%></span>
  </p>

  <p class="my-3 ">
    <strong class="block font-medium mb-1">Content:</strong>
    <span><%= comment.content %></span>
  </p>

  <% if comment.post.user.id == current_user.id || current_user.is_an_admin? %>
    <%= button_to [comment.post, comment], method: :delete, class: "flex items-center text-red-500 hover:text-red-700 mt-4" do %>
      <i class="far fa-trash-alt text-red-500 mr-1"></i>
      <span class="text-sm font-medium">Delete Comment</span>
    <% end %>
  <% end %>

  <% if action_name != "show" %>
    <hr class="mt-6 border-t border-gray-300">
  <% end %>
<% end %>
