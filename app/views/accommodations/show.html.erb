<div class="container-profile">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
        <%= notice %>
      </p>
    <% end %>
    <%= render 'shared/head' %>

    <%= render @accommodation %>

    <% if @accommodation.user.id == current_user.id || current_user.is_an_admin? %>
      <div class="mt-2">
        <%= link_to "Edit this accommodation", edit_accommodation_path(@accommodation), class: "rounded-lg py-3 ml-2 px-5 bg-purple-500 text-white inline-block font-medium hover:bg-purple-400" %>
      </div>
      <div class="mt-2">
        <%= button_to "Destroy this accommodation", accommodation_path(@accommodation), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>

    <%= render "accommodations/reviews", accommodation: @accommodation, reviews: @reviews %>
  </div>
</div>
