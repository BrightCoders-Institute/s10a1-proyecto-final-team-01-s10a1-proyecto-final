<div class="sign-up row">
  <div class="left-side">
    <%= image_tag 'IMG.jpg', class: 'w-100 h-100' %>
  </div>
  <div class="right-side">
  <%= image_tag 'app_logo.png'%>
    <h2 class="title">Create an account</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "john.doe@gmail.com", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :role_id %>
        <%= f.select(:role_id, Role.where(id: [3, 4]).collect { |role| [role.name.capitalize, role.id] }, { include_blank: false },
                      { class: "form-input my-0" }) %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "Enter password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "Confirm password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn-primary" %>
      </div>
    <% end %>

  <label for="" class="text-center w-100"> or </label>
    <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "block text-center btn-primary btn-google w-100" do %>
    <%= image_tag 'google.png', class: 'img-google' %>
    <span>Sign up with Google</span>
  <% end %>

    <%= button_to user_facebook_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "block text-center btn-primary btn-facebook w-100" do %>
    <i class="fa-brands fa-facebook-f"></i>
    <span>Sign up with Facebook</span>
    <span></span>
  <% end %>
<%= link_to 'Sign in', new_user_session_path, class: "text-center btn-primary btn-sign-in" %>
  <div class="links-wrapper">
   <%= link_to 'Cookies', new_user_session_path, class: "sign-in-link" %>
   <%= link_to 'Legal policy', new_user_session_path, class: "sign-in-link" %>
   <%= link_to 'Made with love in BrightCoders', new_user_session_path, class: "sign-in-link" %>
   <%= link_to 'Copyright 2024', new_user_session_path, class: "sign-in-link" %>
  </div>
  </div>
</div>
