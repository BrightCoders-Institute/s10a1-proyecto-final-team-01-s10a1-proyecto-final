<%= form_with(model: test, class: "contents",
              data: { controller: :places, places_api_key_value: Rails.application.credentials.google_maps_api_key
              }) do |form| %>
  <% if test.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(test.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
        <% test.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :main_image %>
    <%= form.file_field :main_image, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <% if test.main_image.attached? %>
      <div class="my-5">
        <div class="mb-3">
          <%= image_tag test.main_image %>
        </div>
        <%= link_to "Remove", remove_image_test_path(test.main_image), class: "rounded-lg py-1 px-3 bg-red-600 text-white inline-block font-medium cursor-pointer",
                    method: :delete, data: { turbo_method: :delete } %>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :secondary_images %>
    <%= form.file_field :secondary_images, multiple: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <% test.secondary_images.each do |image| %>
      <%= form.hidden_field :secondary_images, multiple: true, value: image.signed_id %>

      <div class="my-5">
        <div class="mb-3">
          <%= image_tag image %>
        </div>
        <%= link_to "Remove", remove_image_test_path(image), class: "rounded-lg py-1 px-3 bg-red-600 text-white inline-block font-medium cursor-pointer",
                    method: :delete, data: { turbo_method: :delete } %>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.rich_text_area :content, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, id: "address", autocomplete: "OFF", data: { "places-target": "address" }, placeholder: "Enter a place",
                        value: (test.address ? test.address : "Mexico City"), 
                        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, data: { "places-target": "latitude" },
                        value: (test.latitude || "19.433"),
                        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, data: { "places-target": "longitude" },
                        value: (test.longitude || "-99.133"),
                        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= tag.div class: "my-5 h-[400px]", data: { "places-target": "component" } %>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
