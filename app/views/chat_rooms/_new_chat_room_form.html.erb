<div class="w-full flex flex-row">
  <%= form_with(model: @chat_room, remote: true, class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } ) do |f| %>
    <%= f.text_field :name, class: "mx-2", autocomplete: 'off' %>
    <%= f.submit data: { disable_with: false }, class: "btn bg-violet-500 hover:bg-violet-400 p-2 m-2 rounded-md"%>
  <% end %>
</div>