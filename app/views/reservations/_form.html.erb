<%= form_with(model: reservation, class: "contents p-4 bg-white rounded-lg shadow-md", 
              data: { controller: "reservationdatespicker", 
                      reservationdatespicker_reservation_id_value: reservation.id }) do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation" class="bg-red-100 text-red-600 px-4 py-3 rounded-md mb-4">
      <h2 class="font-semibold mb-2"><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>
      <ul class="list-disc pl-5">
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6">
    <% if current_user.is_an_admin? %>
      <div>
        <%= form.label :user, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select(:user_id, User.where(role_id: 4).collect { |user| [user.email, user.id] }, { include_blank: false },
                        { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md", 
                          data: { controller: "tomselect" } }) %>
      </div>
    <% else %>
      <div class="hidden">
        <%= form.hidden_field :user_id, value: current_user.id %>
      </div>
    <% end %>

    <div>
      <%= form.label :accommodation, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select(:accommodation_id, Accommodation.all.collect { |accommodation| [accommodation.title, accommodation.id] }, { include_blank: false },
                      { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md", 
                        data: { controller: "tomselect", "reservationdatespicker-target": "accommodation" } }) %>
    </div>

    <div>
      <%= form.label :dates_range, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :dates_range, value: reservation.dates_range,
                        class: 'mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md', 
                        data: { "reservationdatespicker-target": "datesrange" } %>
    </div>

    <% if %w[new create].exclude?(action_name) %>
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= form.check_box :active, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
        </div>
        <div class="ml-3 text-sm">
          <%= form.label :active, 'Active?', class: 'font-medium text-gray-700' %>
        </div>
      </div>
    <% else %>
      <div class="hidden">
        <%= form.hidden_field :active, value: true %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex justify-between items-center">
    <%= form.submit "Update Reservation", class: 'rounded-lg py-3 px-5 bg-green-600 text-white font-bold inline-block hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-900 focus:ring-opacity-100' %>
    <%= link_to "Back to reservations", reservations_path, class: 'rounded-lg py-3 px-5 bg-red-500 text-white inline-block font-bold ml-3 no-underline hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-900 focus:ring-opacity-100' %>
  </div>
<% end %>
