<%= form_with(model: reservation, class: "contents", 
                                  data: { controller: "reservationdatespicker", 
                                          reservationdatespicker_reservation_id_value: reservation.id }) do |form| %>
<% if reservation.errors.any? %>
<div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
  <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

  <ul>
    <% reservation.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-2 gap-4">
  <% if current_user.is_an_admin? %>
  <div class="my-3 ">
    <%= form.label :user %>
    <%= form.select(:user_id, User.where(role_id: 4).collect { |user| [user.email, user.id] }, { include_blank: false },
                      { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", data: { controller: "tomselect" } }) %>
  </div>
  <% else %>
  <div class="my-3 d-none">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>
  <% end %>

  <div class="my-3 ">
    <%= form.label :accommodation %>
    <%= form.select(:accommodation_id, Accommodation.all.collect { |accommodation| [accommodation.title, accommodation.id] }, { include_blank: false },
                    { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", data: { controller: "tomselect", "reservationdatespicker-target": "accommodation" } }) %>
  </div>

  <div class="my-3 ">
    <%= form.label :dates_range %>
    <%= form.text_field :dates_range, value: reservation.dates_range,
                        class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full', 
                        data: { "reservationdatespicker-target": "datesrange" } %>
  </div>

  <% if %w[new create].exclude?(action_name) %>
  <div class="my-3">
    <%= form.check_box :active %>
    <%= form.label :active, 'Active?', class: 'ml-2 text-start font-semibold' %>
  </div>
  <% else %>
  <div class="d-none">
    <%= form.hidden_field :active, value: true %>
  </div>
  <% end %>
</div>


<div class="inline">
  <%= form.submit class: "reservations-buttons border-b-none flex items-center" do %>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
    class="w-6 h-6 mr-2">
    <path stroke-linecap="round" stroke-linejoin="round"
      d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
  </svg>
  Update reservation
  <% end %>
</div>
<% end %>