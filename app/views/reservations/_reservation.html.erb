<%= content_tag :div, id: (dom_id reservation) do %>
  <h1 class="font-bold text-4xl"><%= reservation.accommodation.title %></h1>

  <p class="my-5">
    <strong class="block font-medium mb-1">Guest:</strong>
    <%= reservation.user.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Dates range:</strong>
    <%= reservation.dates_range %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Active:</strong>
    <%= reservation.is_active? %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this reservation", reservation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this reservation", edit_reservation_path(reservation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
<% end %>
