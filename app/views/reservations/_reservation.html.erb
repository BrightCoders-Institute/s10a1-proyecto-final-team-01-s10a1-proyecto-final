<%= content_tag :div, id: (dom_id reservation), class: "max-w-4xl mx-auto px-4 py-6 sm:px-6 lg:px-8" do %>
  <h2 class="text-3xl font-bold text-center text-gray-900 sm:text-4xl">
    Your reservation: <%= reservation.accommodation.title %>
  </h2>
  <div class="mt-6 flex justify-center items-center">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden w-full max-w-md lg:max-w-lg">
      <div class="bg-cover bg-center h-48 w-full" style="background-image: url('<%= asset_path 'landscape.jpg' %>')" title="Woman holding a mug">
      </div>
      <div class="p-4">
        <div class="user-post flex justify-center items-center text-gray-900 font-bold text-xl mb-2 mt-2 text-center">
          <% if reservation.user.image.representable? %>
            <div class="image-profile mr-4">
              <%= image_tag reservation.user.image, class: 'user-profile' %>
            </div>
          <% end %>
          <p><%= reservation.user.name %></p>
        </div>
        <p class="text-center text-gray-700 text-base mb-4"><%= reservation.user.email %></p>
        <p class="text-center text-gray-700 text-base mb-4"><%= reservation.dates_range %></p>
        <div class="my-4 flex justify-center">
          <strong class="block font-bold mb-1">Status</strong>
          <span class="flex items-center text-sm font-medium text-gray-900 ml-2">
            <span class="flex w-2.5 h-2.5 bg-green-600 rounded-full mr-1.5 flex-shrink-0"></span>
            <%= reservation.print_is_active_text %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="buttons-wrapper mt-4 flex flex-wrap justify-center gap-2">
    <% if @reservation.user.id == current_user.id || current_user.is_an_admin? %>
      <%= link_to edit_reservation_path(@reservation), class: "inline-flex items-center justify-center px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
        Edit
      <% end %>
      <%= button_to reservation_path(@reservation), method: :delete, class: "inline-flex items-center justify-center px-4 py-2 bg-red-500 text-white text-sm font-medium rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 no-border w-100 h-100" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
        Destroy
      <% end %>
      <%= link_to reservations_path, class: "inline-flex items-center justify-center px-4 py-2 bg-gray-500 text-white text-sm font-medium rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class: "w-4 h-4 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
        </svg>
        Back
      <% end %>
    <% end %>
  </div>
<% end %>
